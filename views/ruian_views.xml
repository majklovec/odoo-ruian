<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List Views -->
    <record id="view_ruian_town_list" model="ir.ui.view">
        <field name="name">ruian.town.list</field>
        <field name="model">ruian.town</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postal_code"/>
            </list>
        </field>
    </record>

    <record id="view_ruian_street_list" model="ir.ui.view">
        <field name="name">ruian.street.list</field>
        <field name="model">ruian.street</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <!-- Show count of related numbers -->
                <field name="number_count" string="Numbers"/>
            </list>
        </field>
    </record>

    <record id="view_ruian_number_list" model="ir.ui.view">
        <field name="name">ruian.number.list</field>
        <field name="model">ruian.number</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="street_ids" widget="many2many_tags"/>
                <field name="town_id"/>
            </list>
        </field>
    </record>

    <!-- Form Views -->
    <record id="view_ruian_town_form" model="ir.ui.view">
        <field name="name">ruian.town.form</field>
        <field name="model">ruian.town</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="postal_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ruian_street_form" model="ir.ui.view">
        <field name="name">ruian.street.form</field>
        <field name="model">ruian.street</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <!-- Numbers in this street -->
                    <field name="number_ids">
                        <list>
                            <field name="full_address"/>
                        </list>
                        <form>
                            <field name="name"/>
                            <field name="street_ids" widget="many2many_tags"/>
                            <field name="town_id" />
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ruian_number_form" model="ir.ui.view">
        <field name="name">ruian.number.form</field>
        <field name="model">ruian.number</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="full_address" readonly="1"/>
                        <field name="name"/>
                        <field name="street_ids" widget="many2many_tags"/>
                        <field name="town_id" />
                        <field name="coord_x"/>
                        <field name="coord_y"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>